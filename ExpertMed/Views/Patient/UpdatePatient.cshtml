                        <i class="ri-eye-fill"></i> View Hours Available
                    </button>
                </div>

                <!-- Modal de las horas disponibles -->
                <div class="modal flip" id="hoursModalgrid" tabindex="-1" aria-labelledby="hoursModalgridLabel">

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Receta Médica</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .table-container {
            width: 100%;
        }

        table {
            width: 100%;
            border-collapse: collapse; /* Elimina los bordes duplicados entre celdas */
        }

        th, td {
            padding: 6px; /* Espaciado reducido entre filas */
            text-align: left;
            font-size: 12px; /* Tamaño de fuente reducido */
            border: none; /* Eliminar bordes */
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .footer {
            margin-top: 20px;
            text-align: center;
            font-size: 10px; /* Tamaño de fuente para el pie de página */
            color: #888;
            display: flex;
            justify-content: space-around;
        }

        .signature {
            width: 45%; /* Ajusta el ancho de cada firma */
            text-align: center;
            font-size: 12px; /* Tamaño de fuente para firmas */
        }

            .signature p {
                margin: 5px 0;
            }
    </style>
</head>

<body>
    <table class="table-container">
        <!-- Datos del médico en columnas A y B -->
        <tr>
